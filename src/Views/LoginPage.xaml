<Page
    x:Class="IPAbuyer.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="600">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="登录" FontSize="20" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,0,0,16"/>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="16" Margin="0,0,0,12">
            <TextBlock Text="邮箱" VerticalAlignment="Center" Margin="0,0,8,0" Width="40"/>
            <ComboBox x:Name="EmailComboBox" PlaceholderText="请输入邮箱或手机号" Width="200" IsEditable="True"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="16" Margin="0,0,0,12">
            <TextBlock Text="密码" VerticalAlignment="Center" Margin="0,0,8,0" Width="40"/>
            <PasswordBox x:Name="PasswordBox" PlaceholderText="请输入密码" Width="200"/>
        </StackPanel>
        <Button x:Name="NextButton" Content="下一步"  Grid.Row="3" Grid.ColumnSpan="2" Margin="0,0,0,0" HorizontalAlignment="Center" Width="120" Click="NextButton_Click"/>
        <StackPanel x:Name="CodePanel" Visibility="Collapsed" Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
            <TextBox x:Name="CodeBox" Header="验证码" PlaceholderText="请输入6位验证码" MaxLength="6" Width="120"/>
            <Button x:Name="LoginButton" Content="登录" Click="LoginButton_Click"/>
        </StackPanel>
        <TextBlock x:Name="ResultText" Foreground="Red" TextWrapping="Wrap" Grid.Row="5" Grid.ColumnSpan="2" Margin="0,12,0,0"/>
    </Grid>
</Page>