<Page
    x:Class="IPAbuyer.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="320" Spacing="16">
        <TextBlock Text="登录" Style="{StaticResource MyLabel}" FontSize="20" HorizontalAlignment="Center"/>
        <TextBox x:Name="EmailBox" Header="邮箱" PlaceholderText="请输入邮箱"/>
        <PasswordBox x:Name="PasswordBox" Header="密码" PlaceholderText="请输入密码"/>
        <Button x:Name="NextButton" Content="下一步" Style="{StaticResource PrimaryAction}" Click="NextButton_Click"/>
        <StackPanel x:Name="CodePanel" Visibility="Collapsed" Spacing="8">
            <TextBox x:Name="CodeBox" Header="验证码" PlaceholderText="请输入6位验证码" MaxLength="6"/>
            <Button x:Name="LoginButton" Content="登录" Style="{StaticResource PrimaryAction}" Click="LoginButton_Click"/>
        </StackPanel>
        <TextBlock x:Name="ResultText" Foreground="Red" TextWrapping="Wrap"/>
    </StackPanel>
</Page>