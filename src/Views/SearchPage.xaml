<Page
    x:Class="IPAbuyer.Views.SearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="100,20,100,20">
        <!-- 顶部右侧按钮区 -->
        <Grid HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" x:Name="LogoutButton" MinWidth="100" Click="LogoutButton_Click" Margin="0,0,10,0">
                退出登录
            </Button>
            <Button Grid.Column="1" x:Name="SettingsButton" MinWidth="100" Click="SettingsButton_Click" Margin="0,0,0,0">
                软件设置
            </Button>
        </Grid>
        <!-- 搜索区 -->
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,40,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" x:Name="AppNameBox" MinWidth="300" MinHeight="20" PlaceholderText="请输入App名称">
            </TextBox>
            <Button Grid.Column="1" x:Name="SearchButton" Click="SearchButton_Click" MinHeight="30" MinWidth="100" Margin="16,0,0,0">
                开始查询
            </Button>
        </Grid>
        <!-- 操作按钮区 -->
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,90,0,0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Margin="0,0,0,0" x:Name="BatchPurchaseButton" Click="BatchPurchaseButton_Click" MinWidth="100">
                购买
            </Button>
            <Button Grid.Column="1" Margin="10,0,0,0" x:Name="DownloadButton" Click="DownloadButton_Click" MinWidth="100">
                下载
            </Button>
            <Button Grid.Column="2" Margin="10,0,0,0" x:Name="PrevPageButton" Click="PrevPageButton_Click" MinWidth="100">
                上一页
            </Button>
            <Button Grid.Column="3" Margin="10,0,0,0" x:Name="NextPageButton" Click="NextPageButton_Click" MinWidth="100">
                下一页
            </Button>
        </Grid>
        <!-- 表格区 -->
        <Border CornerRadius="2" Background="AliceBlue" BorderBrush="White" BorderThickness="1" Margin="40,150,0,20">
            <ListView x:Name="ResultList" Margin="10,10,10,10" SelectionMode="Multiple">
                <ListView.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="App名称" Grid.Column="0">
                        </TextBlock>
                        <TextBlock Text="AppID" Grid.Column="1">
                        </TextBlock>
                        <TextBlock Text="包名" Grid.Column="2">
                        </TextBlock>
                        <TextBlock Text="版本" Grid.Column="3">
                        </TextBlock>
                        <TextBlock Text="价格" Grid.Column="4">
                        </TextBlock>
                        <TextBlock Text="状态" Grid.Column="5">
                        </TextBlock>
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid DoubleTapped="ResultRow_DoubleTapped">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding bundleID}" Grid.Column="0"/>
                            <TextBlock Text="{Binding bundleID}" Grid.Column="0" TextTrimming="CharacterEllipsis" ToolTipService.ToolTip="{Binding bundleID}"/>
                            <TextBlock Text="{Binding id}" Grid.Column="1"/>
                            <TextBlock Text="{Binding name}" Grid.Column="2"/>
                            <TextBlock Text="{Binding price}" Grid.Column="3"/>
                            <TextBlock Text="{Binding version}" Grid.Column="4"/>
                            <TextBlock Text="{Binding purchased}" Grid.Column="5"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
        <TextBlock VerticalAlignment="Bottom" x:Name="ResultText" TextWrapping="Wrap" Margin="40,0,40,0">
            状态栏
        </TextBlock>
    </Grid>
</Page>