<Page
    x:Class="IPAbuyer.Views.SearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid Width="900" Height="700" HorizontalAlignment="Center" VerticalAlignment="Center">
        <!-- 顶部右侧按钮区 -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,16,16,0" Width="120">
            <Button x:Name="LogoutButton" Content="退出登录" Style="{StaticResource Action}" Click="LogoutButton_Click" Margin="0,0,0,8"/>
            <Button x:Name="PurchasedHistoryButton" Content="已购历史" Style="{StaticResource Action}" Click="PurchasedHistoryButton_Click"/>
        </StackPanel>
        <!-- 搜索区 -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="32,32,0,0" Height="40">
            <TextBox x:Name="AppNameBox" Width="400" Height="40" PlaceholderText="请输入APP名称"/>
            <Button x:Name="SearchButton" Content="查询" Style="{StaticResource PrimaryAction}" Click="SearchButton_Click" Width="80" Height="40" Margin="16,0,0,0"/>
        </StackPanel>
        <!-- 操作按钮区 -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="32,90,0,0" Height="40" Spacing="16">
            <Button x:Name="BatchPurchaseButton" Content="批量购买选中" Click="BatchPurchaseButton_Click" Style="{StaticResource PrimaryAction}" Width="120"/>
            <Button x:Name="RefreshButton" Content="刷新" Click="RefreshButton_Click" Style="{StaticResource Action}" Width="80"/>
            <Button x:Name="PrevPageButton" Content="上一页" Click="PrevPageButton_Click" Width="80"/>
            <Button x:Name="NextPageButton" Content="下一页" Click="NextPageButton_Click" Width="80"/>
        </StackPanel>
        <!-- 表格区 -->
        <Border CornerRadius="18" BorderBrush="#888" BorderThickness="2" Background="#FFF" Margin="32,150,0,0" Width="820" Height="400">
            <ListView x:Name="ResultList" Width="816" Height="396" SelectionMode="Multiple">
            <ListView.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="210"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="bundleID" Grid.Column="0" FontWeight="Bold" Padding="18,0,0,0"/>
                    <TextBlock Text="id" Grid.Column="1" FontWeight="Bold"/>
                    <TextBlock Text="name" Grid.Column="2" FontWeight="Bold"/>
                    <TextBlock Text="price" Grid.Column="3" FontWeight="Bold"/>
                    <TextBlock Text="version" Grid.Column="4" FontWeight="Bold"/>
                    <TextBlock Text="purchased" Grid.Column="5" FontWeight="Bold"/>
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid DoubleTapped="ResultRow_DoubleTapped">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding bundleID}" Grid.Column="0"/>
                        <TextBlock Text="{Binding bundleID}" Grid.Column="0" TextTrimming="CharacterEllipsis" ToolTipService.ToolTip="{Binding bundleID}"/>
                        <TextBlock Text="{Binding id}" Grid.Column="1"/>
                        <TextBlock Text="{Binding name}" Grid.Column="2"/>
                        <TextBlock Text="{Binding price}" Grid.Column="3"/>
                        <TextBlock Text="{Binding version}" Grid.Column="4"/>
                        <TextBlock Text="{Binding purchased}" Grid.Column="5"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            </ListView>
        </Border>
        <!-- 分页区已合并至操作按钮区 -->
        <!-- 状态栏 -->
        <TextBlock x:Name="ResultText" TextWrapping="Wrap" Margin="32,630,0,0" Width="820" Height="40"/>
    </Grid>
</Page>