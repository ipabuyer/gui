<Page
    x:Class="IPAbuyer.Views.SearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid Width="400" Height="320" HorizontalAlignment="Center" VerticalAlignment="Center">
        <!-- 右上角绝对定位退出登录按钮 -->
        <Button x:Name="LogoutButton" Content="退出登录" Style="{StaticResource Action}" Click="LogoutButton_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,16,16,0" Width="100" Height="40"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="320" Spacing="16">
            <TextBlock Text="App查询" Style="{StaticResource MyLabel}" FontSize="20" HorizontalAlignment="Center"/>
            <TextBox x:Name="AppNameBox" Header=" " PlaceholderText="请输入APP名称"/>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Width="120" Spacing="8">
                <Button x:Name="SearchButton" Content="查询" Style="{StaticResource Action}" Click="SearchButton_Click" Width="120"/>
                <Button x:Name="PurchasedHistoryButton" Content="已购历史" Style="{StaticResource Action}" Click="PurchasedHistoryButton_Click" Width="120"/>
            </StackPanel>
            <TextBlock x:Name="ResultText" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Page>